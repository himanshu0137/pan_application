.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-cube
        | Project name
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/') Home
        if user
          li(class=(title == 'DashBoard') ? 'active' : undefined)
              a(href='/dashboard') DashBoard
          if user.role == 1
            li(class=(title == 'Users') ? 'active' : undefined)
              a(href='/users') Users
            li(class=(title == 'Balance History') ? 'active' : undefined)
              a(href='/balancehistory') Balance History
          else if user.role == 2
            li(class=(title == 'Form') ? 'active' : undefined)
              a(href='/form') Form
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              span= user.name || user.email
              i.caret
            ul.dropdown-menu
              li
                a(href='/reset') Change Password
              li
                a(href='/logout') Logout
          if user.role == 1
            li(class=(title == 'Create Account') ? 'active' : undefined)
              a(href='/signup') Create Account
          else if user.role == 2
            li
              a= "Rs. "+user.balance
